@page "/part/{FormID:guid}"
@using OrderTrak.Client.Shared
@using OrderTrak.Client.Shared.FormComponents
@inherits OrderTrakBasePage

<PageTitle>Part - OrderTrak</PageTitle>

@if (Part != null)
{
    @if (DeletePart)
    {
        <ModalPopup Title="Confirm Delete" OnClose="Delete_Toggle">
            <Content>
                <p class="subtitle">Are you sure you want to delete this part?</p>
            </Content>
            <FooterButtons>
                <FormButton Title="No" Style="is-danger" Icon="fa-times" OnClick="Delete_Toggle" />
                <FormButton Title="Yes" Style="is-success" Icon="fa-check" OnClick="DeleteConfirm_Click" />
            </FooterButtons>
        </ModalPopup>
    }

    <div class="box">
        <div class="columns is-centered">
            <div class="column">
                <div class="buttons is-pulled-right">
                    <FormButton Title="Delete" Style="is-danger" Icon="fa-trash" OnClick="Delete_Toggle" />
                </div>
            </div>
        </div>
        <div class="columns is-centered">
            <div class="column is-one-third">
                <CardComponent Title="Part Information" Icon="fa-cogs">
                    <CardBody>
                        <FormField Icon="fa-cogs" Title="Part Number">
                            <Content>
                                <InputText class="input is-danger" Type="text" Placeholder="Part Number" @bind-Value="Part.PartNumber" />
                            </Content>
                        </FormField>
                        <FormField Icon="fa-align-left" Title="Description">
                            <Content>
                                <InputText class="input is-danger" Type="text" Placeholder="Part Description" @bind-Value="Part.PartDescription" />
                            </Content>
                        </FormField>
                        <FormField Icon="fa-tags" Title="Type">
                            <Content>
                                <InputText class="input is-danger" Type="text" Placeholder="Part Type" @bind-Value="Part.PartType" />
                            </Content>
                        </FormField>
                        <FormField Icon="fa-industry" Title="Vendor">
                            <Content>
                                <InputText class="input is-danger" Type="text" Placeholder="Vendor" @bind-Value="Part.PartVendor" />
                            </Content>
                        </FormField>
                        <FormField Icon="fa-dollar-sign" Title="Cost">
                            <Content>
                                <InputNumber class="input is-primary" Type="text" Placeholder="Cost" @bind-Value="Part.PartCost" />
                            </Content>
                        </FormField>
                        <FormField Icon="fa-ruler" Title="Unit of Measurment">
                            <Content>
                                <InputText class="input is-danger" Type="text" Placeholder="Unit of Measurment" @bind-Value="Part.PartUnit" />
                            </Content>
                        </FormField>
                        <hr />
                        <div class="field">
                            <InputCheckbox class="is-checkradio" @bind-Value="Part.IsStock" id="EmptyOnly" />
                            <label for="EmptyOnly">Is Stock?</label>
                        </div>
                    </CardBody>
                </CardComponent>
            </div>
        </div>
        <hr />
        <div class="buttons">
            <FormButton Title="Back" Style="is-danger" Icon="fa-arrow-left" URL="/part/search" />
            <FormButton Title="Save" Style="is-success" Icon="fa-save" OnClick="Save_Click" />
        </div>
    </div>
}
else
{
    <OrderTrakLoading />
}
