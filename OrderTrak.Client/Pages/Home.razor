@page "/"
@using OrderTrak.Client.Shared
@using OrderTrak.Client.Shared.FormComponents
@inherits OrderTrakBasePage

<PageTitle>OrderTrak</PageTitle>

<div class="columns is-centered">
    <div class="column is-half">
        <CardComponent Title="Welcome to OrderTrak" Icon="fa-info-circle">
            <CardBody>
                OrderTrak is your comprehensive solution for managing orders and tracking projects efficiently.
                Use the navigation bar to access different sections of the application.
                If you have any questions, feel free to reach out to our support team.
            </CardBody>
            <Footer>
                <FormButton Title="Login" Style="card-footer-item" Icon="fa-sign-in-alt" URL="/login" />
                <FormButton Title="Register" Style="card-footer-item" Icon="fa-user-check" URL="/register" />
            </Footer>
        </CardComponent>
    </div>
</div>
