@using OrderTrak.Client.Shared.Nav
@inherits LayoutComponentBase

<CascadingValue Value="this">
    <NavBar />
    <section class="hero is-light is-small">
        <div class="hero-body">
            <p class="title">
                @HeaderMessage
            </p>
            <p class="subtitle">
                @SubTitle
            </p>
        </div>
    </section>

    @if (Messages.Count > 0)
    {
        @foreach (var message in Messages)
        {
            <br />
            <div class="columns is-centered">
                <div class="column is-10">
                    <div class="content">
                        <div class="notification @message.BulmaLevel">
                            <div class="columns is-centered">
                                <div class="column">
                                    <strong>@message.Text</strong>
                                </div>
                                <div class="column">
                                    <div class="button is-pulled-right">
                                        <button class="fas fa-times @message.BulmaLevel" @onclick="() => RemoveMessage(message)"></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

    <section class="section">
        @Body
    </section>
</CascadingValue>

