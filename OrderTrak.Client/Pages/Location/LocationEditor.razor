@page "/location/{FormID:guid}"
@using OrderTrak.Client.Shared
@using OrderTrak.Client.Shared.FormComponents
@inherits OrderTrakBasePage

<PageTitle>Location - OrderTrak</PageTitle>

@if (Location != null)
{
    @if (DeleteLocation)
    {
        <ModalPopup Title="Confirm Delete" OnClose="Delete_Toggle">
            <Content>
                <p class="subtitle">Are you sure you want to delete this location?</p>
            </Content>
            <FooterButtons>
                <FormButton Title="No" Style="is-danger" Icon="fa-times" OnClick="Delete_Toggle" />
                <FormButton Title="Yes" Style="is-success" Icon="fa-check" OnClick="DeleteConfirm_Click" />
            </FooterButtons>
        </ModalPopup>
    }

    <div class="box">
        <div class="columns is-centered">
            <div class="column">
                <div class="buttons is-pulled-right">
                    <FormButton Title="Delete" Style="is-danger" Icon="fa-trash" OnClick="Delete_Toggle" />
                </div>
            </div>
        </div>
        <div class="columns is-centered">
            <div class="column is-one-third">
                <CardComponent Title="Location Information" Icon="fa-warehouse">
                    <CardBody>
                        <FormField Icon="fa-warehouse" Title="Location Name">
                            <Content>
                                <InputText class="input is-danger" Type="text" Placeholder="Location Name" @bind-Value="Location.LocationNumber" />
                            </Content>
                        </FormField>
                        <div class="columns is-centered">
                            <div class="column">
                                <FormField Icon="fa-ruler-vertical" Title="Height">
                                    <Content>
                                        <InputNumber class="input is-danger" Type="text" Placeholder="Height" @bind-Value="Location.Height" />
                                    </Content>
                                </FormField>
                            </div>
                            <div class="column">
                                <FormField Icon="fa-ruler-horizontal" Title="Width">
                                    <Content>
                                        <InputNumber class="input is-danger" Type="text" Placeholder="Width" @bind-Value="Location.Width" />
                                    </Content>
                                </FormField>
                            </div>
                            <div class="column">
                                <FormField Icon="fa-ruler-combined" Title="Depth">
                                    <Content>
                                        <InputNumber class="input is-danger" Type="text" Placeholder="Depth" @bind-Value="Location.Depth" />
                                    </Content>
                                </FormField>
                            </div>
                        </div>
                        <FormField Icon="fa-balance-scale" Title="Unit of Measurement">
                            <Content>
                                <InputText class="input is-danger" Type="text" Placeholder="Unit of Measurement" @bind-Value="Location.UnitOfMeasure" />
                            </Content>
                        </FormField>
                    </CardBody>
                </CardComponent>
            </div>
        </div>
        <hr />
        <div class="buttons">
            <FormButton Title="Back" Style="is-danger" Icon="fa-arrow-left" URL="/location/search" />
            <FormButton Title="Save" Style="is-success" Icon="fa-save" OnClick="Save_Click" />
        </div>
    </div>
}
else
{
    <OrderTrakLoading />
}
